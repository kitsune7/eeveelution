.quantitative {
  margin: 20px 0;

  table {
    width: 100%;
  }

  td {
    text-align: center;
  }
}

.agree-scale td {
  width: 20%;
}

.number-scale td {
  width: 10%;
}

ol {
  li {
    line-height: 2em;
    font-weight: 700;
  }

  label {
    font-weight: 400;
  }
}

.qualitative textarea {
  width: 100%;
  height: 160px;
}

@media print {
  ol {
    li {
      font-weight: 600;
    }

    input[type=radio] {
      display: none;
    }

    label:after {
      content: "";
      width: 16px;
      height: 16px;
      border-radius: 8px;
      border: 1px solid #444;
      background-color: #eee;
      display: block;
      margin: 0 auto;
    }
  }
}
