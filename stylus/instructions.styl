body {
  background-color: #eee;
  font-family: 'Roboto', Arial, Helvetica, sans-serif;
  padding: 30px;
}

h1 {
  font-size: 35px;
  font-weight: 300;
  margin-top: 0;
  margin-bottom: 20px;
  padding-top: 0;
}

h2 {
  font-weight: 300;
  font-size: 26px;
}

ul {
  margin-left: 40px;
}

ol {
  margin-left: 20px;
}

ol li {
  font-weight: 300;
  font-size: 20px;
  margin-bottom: 10px;
}

img {
  display: block;
  margin: 10px 0;
  width: 95%;
}

#wrapper {
  background-color: #fff;
  border: 5px solid #ccc;
  padding: 50px;
  max-width: 975px;
}

.thumbnail img {
  margin: 0;
  width: 100%;
}

.right {
  float: right;

  &:after {
    content: "";
    clear: both;
  }
}

@media print {
  #wrapper {
    border: none;
    padding: 20px;
  }
}
