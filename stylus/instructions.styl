$space = 20px;

body {
  background-image: url("../images/noise.png");
  background-color: #2c90dd;
  font-family: 'Roboto', Arial, Helvetica, sans-serif;
  padding: $space;
}

h1 {
  font-size: 35px;
  font-weight: 300;
  margin-top: 0;
  margin-bottom: $space;
  padding-top: 0;
}

.step {
  margin-bottom: $space;
}

h2 {
  font-weight: 300;
  font-size: 26px;

  &:after {
    content: "";
    width: 100%;
    border-bottom: 1px solid #999;
    display: block;
    margin-top: 2px;
    margin-bottom: $space;
  }
}

ul {
  margin-left: $space * 2;
}

ol {
  margin-left: $space;
}

ol li {
  font-weight: 300;
  font-size: 20px;
  margin-bottom: $space / 2;
}

img {
  display: block;
  margin: $space / 2 0;
  width: 95%;
}

#wrapper {
  background-color: #fff;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.32);
  padding: $space * 2;
  max-width: 975px;
}

.thumbnail img {
  margin: 0;
  width: 100%;
}

.right {
  float: right;

  &:after {
    content: "";
    clear: both;
  }
}
